<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:id="@+id/othersMessageLinearLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="2dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="40dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/others_chat_bubble"
        android:orientation="vertical"
        android:padding="8dp">

        <TextView
            android:id="@+id/othersName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:text="XYZ"
            android:textColor="@color/authui_colorPrimaryDark" />

        <TextView
            android:id="@+id/othersMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Hello Sir"
            android:textColor="@color/colorPrimaryDark" />

    </LinearLayout>

</RelativeLayout>